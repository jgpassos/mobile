<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bisque"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/titulo_tela_inicial"
        android:textSize="30dp"
        android:textColor="@color/gray"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:src="@drawable/imgtelainicial" />

    <Button
        android:id="@+id/buttonConhecer"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/snow"
        android:text="CONHECER"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buttonMaisInformacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/mais_informacoes"
        android:textColor="@color/gray"
        android:textSize="15dp" />

</LinearLayout>